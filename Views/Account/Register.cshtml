@model homework_64_Atai.ViewModels.RegisterViewModel

<h2>Регистрация нового пользователя</h2>

<form method="post" asp-controller="Account" asp-action="Register">

   <div asp-validation-summary="ModelOnly"></div>

   <div>
       <strong><label asp-for="Role">Role</label></strong>
    <select asp-for="Role">
        <option value="Company">Company</option>
        <option value="Worker">Worker</option>
    </select>
   <span asp-validation-for="Role"></span>
   </div>
   <div>

      <strong><label asp-for="UserName">Name</label></strong></><br/>

       <input asp-for="UserName" />

       <span asp-validation-for="UserName"></span>

   </div>

    <div>

       <strong><label asp-for="PhoneNumber"></label></strong><br/>

       <input asp-for="PhoneNumber" />

       <span asp-validation-for="PhoneNumber"></span>

   </div>

   
    <div>

       <strong><label asp-for="Avatar"></label></strong><br />

       <input asp-for="Avatar" />

       <span asp-validation-for="Avatar"></span>

   </div>

   <div>
       <strong><label asp-for="Email"></label></strong><br />
       <input asp-for="Email" />
       <span asp-validation-for="Email"></span>
   </div>


   <div>

       <strong><label asp-for="Password"></label></strong><br />

       <input asp-for="Password" />

       <span asp-validation-for="Password"></span>

   </div>

   <div>

       <strong><label asp-for="ConfirmPassword"></label></strong><br />

       <input asp-for="ConfirmPassword" />

       <span asp-validation-for="ConfirmPassword"></span>

   </div>
   <div>

       <input type="submit" value="Регистрация" />

   </div>

</form>
@section Scripts

{
    @{
       await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}